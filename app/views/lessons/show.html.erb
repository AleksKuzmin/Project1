
<div class="div-color">
  <h1><%= @lesson.title %></h1>

  <%= image_tag @lesson.image, :class => 'thumb' if @lesson.image.present? %>
  <ul>
    <li>Description: <%= @lesson.description%></li>
    <li>Time: <%= @lesson.date.strftime '%A, %B %e, %Y' %></li>
    <li>Date: <%= @lesson.time.strftime '%H:%M %p'%></li>
    <li>Suburb: <%= @lesson.suburb%></li>
    <li>Postcode:<%= @lesson.postcode%></li>
    <li>instructor<%= @lesson.contact%></li>
  </ul>
  <div >
    <h3>Location</h3>
    <!-- used iframe to display openstreetmap -->
    <iframe width="425" height="350" frameborder="0" scrolling="no"
      marginheight="0" marginwidth="0"
      src="https://www.openstreetmap.org/export/embed.html?bbox=<%= @bbox %>&amp;layer=mapnik&amp;marker=<%= @marker%>"
      style="border: 1px solid black">
    </iframe>
  </div>
  </div>
