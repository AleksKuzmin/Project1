<h1>Namaste, <%= @current_user.email %>!</h1>

<h2> You have got <%= pluralize(@current_user.lessons.count, 'class')  %> available.</h2>

<% @current_user.lessons.each do |lesson| %>
<p>
<%= lesson.title %>
</p>

<div class=“controls”>
  <%= link_to "Edit lesson", edit_lesson_path(lesson) %>
  <%= link_to "Delete lesson", lesson, :method => 'delete', :data => { :confirm => "Are you sure?"} %>
</div>
<% end %>

