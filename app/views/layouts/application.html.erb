<!DOCTYPE html>
<html>
  <head>
    <title>Yoga4</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/water.css@2/out/dark.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="container">
    <nav>
      <%= link_to "Home", root_path %>

      <% if @current_user.present? %>
      <% if @current_user.admin? %>
      <%= link_to "All users", users_path %>
      <% end %>


      <%= link_to "New bookings", new_booking_path %>
      <%= link_to "Your profile", edit_user_path(@current_user) %>
      <%= link_to "Log out #{ @current_user.email}", login_path, :method => 'delete' %>
      <% else %>
      <%= link_to "Sign up", new_user_path %>
      <%= link_to "Sign in", login_path %>
      <% end %>


      <% if @current_user.present? && @current_user.instructor? %>
      <%= link_to "New Classes", new_lesson_path %>
      <% end %>


    </nav>
</div>

    <%= yield %>
  </body>
</html>
