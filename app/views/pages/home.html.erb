<% if @current_user.present? %>

<h1>Namaste <%= link_to @current_user.name, user_path(@current_user.id) %>!</h1>

<%= image_tag @current_user.image if @current_user.image.present? %>


<h2> You have got <%=link_to pluralize(@current_user.bookings.count, 'booking'), bookings_path  %>

  <% if @current_user.instructor? %>
  <p>and</p>
   <%= link_to pluralize(@current_user.lessons.count, 'class'),lessons_path %>
  <% end %>

  available.</h2>
<%end %>
